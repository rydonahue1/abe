{
  /* Basic Options */
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [],
    "allowJs": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    // "noEmit": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/@types"]
  },
  "include": ["./src"],
  "exclude": ["./config.json", "./dist"]
}
